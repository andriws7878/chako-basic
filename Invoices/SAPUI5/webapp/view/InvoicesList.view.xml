<mvc:View controllerName="chakoapp.SAPUI5.controller.InvoicesList" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <List id="invoiceList" headerText="{i18n>invoceListTitle}" class="sapUiResposiveMargin" width="auto" 
          items="{ path : 'northwind2>/Invoices',
                   sorter : { path : 'ShipperName',
                              group: true }}">
        <headerToolbar>
            <Toolbar>
                <Title text="{i18n>invoceListTitle}"/>
                <ToolbarSpacer/>
                <SearchField width="50%" search=".onFilterInvoices"/>
            </Toolbar>
        </headerToolbar>
        <items>
            <ObjectListItem title="{northwind2>Quantity} x {northwind2>ProductName}"
                            number="{ parts : [ {path : 'northwind2>ExtendedPrice'},
                                                {path : 'currency>/usd'}],
                                      type: 'sap.ui.model.type.Currency',
                                      formatOptions: {
                                          showMeasure : false
                                      }}"
                            numberUnit="{currency>/usd}"
                            numberState="{= ${northwind2>ExtendedPrice} > 9 ? 'Success' : 'Error'}">
            </ObjectListItem>
        </items>    
    </List>
</mvc:View>